@model BlogPost
@{
    ViewBag.Title = "Delete blog post";
}

<main class="container-sm">
<div class="jumbotron jumbotron-fluid">
    <div class="container p-0">
        <img id="photo" alt="Banner photo" src="~/images/iStock-1281363470.jpg" class="img-fluid rounded"/>
        <h1 class="display-4">@ViewBag.Title</h1>
        <p class="lead">Blogging about interesting stuff.</p>
    </div>
</div>
<h2>Confirm deletion of</h2>
    <h3>@Model.Title by
        @Model.Author written on 
        @Model.Time in the category 
        @Model.Category.Name</h3>
<form asp-action="Delete" method="post">

    <input type="hidden" asp-for="BlogPostId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
</main>